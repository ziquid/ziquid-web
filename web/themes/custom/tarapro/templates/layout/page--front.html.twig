{#
/**
 * @file
 * TaraPro's theme implementation to display front page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template.
 *
 */
#}
{% include '@tarapro/template-parts/header.html.twig' %}
{% if slider_show %}
  {% include '@tarapro/template-parts/slider.html.twig' %}
{% endif %}
{% include '@tarapro/template-parts/highlighted.html.twig' %}
<div id="main-wrapper" class="main-wrapper">
  <div class="container">
    {% if front_sidebar %}
      <div class="main-container">
    {% endif %}
    <main id="main" class="homepage-content page-content" role="main">
      <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
      {% include '@tarapro/template-parts/content_top.html.twig' %}
      {% if page.content_home %}
        <div class="homepage-content-block">
          {{ page.content_home }}
        </div><!--/.homepage-content -->
      {% endif %}
      {% if page.content %}
        {{ page.content }}
      {% endif %}
      {% include '@tarapro/template-parts/content_bottom.html.twig' %}
    </main>
    {% if front_sidebar %}
      {% include '@tarapro/template-parts/left_sidebar.html.twig' %}
      {% include '@tarapro/template-parts/right_sidebar.html.twig' %}
      </div><!-- /main-container -->
    {% endif %}
  </div><!--/.container -->
</div><!-- /main-wrapper -->
{% if animated_sidebar_option %}
  {% include '@tarapro/template-parts/sidebar_sliding.html.twig' %}
{% endif %}
{% include '@tarapro/template-parts/footer.html.twig' %}
