{{ attach_library('thexpro/sliding-sidebar') }}
<div class="sliding-sidebar animated-panel-from-right">
  <div class="sliding-sidebar-container block-section">
    <div class="close close-sliding-sidebar">x</div>
      {% if page.sidebar_sliding %}
        {{ page.sidebar_sliding }}
      {% else %}
        <p>Please add some content in <a href="{{ base_path }}admin/structure/block">Animated Sidebar</a> block region.</p><p>For more information please refer to this tutorial page:<br /><a href="https://www.drupar.com/doc/thexpro/animated-sidebar" target="_blank">Add content in sliding sidebar</a></p>
      {% endif %}<!-- /page.sidebar_sliding -->
  </div>
</div> <!-- /.sliding-sidebar -->
