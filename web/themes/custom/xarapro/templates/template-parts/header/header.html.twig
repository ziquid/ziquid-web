{% if preloader_option %}
  <div class="loader">
    <div class="loader-inner">
      <div class="loader-icon">
        <span></span>
      </div>
    </div>
  </div>
{% endif %}
<header class="header">
{% if page.header_top_left or page.header_top_right %}
  <div class="header-top">
    <div class="container">
      <div class="header-top-container">
        {% include '@xarapro/template-parts/header/header-top-left.html.twig' %}
        {% include '@xarapro/template-parts/header/header-top-right.html.twig' %}
      </div><!-- /header-top-container -->
    </div><!-- /container -->
  </div><!-- /header-top -->
{% endif %}
<div class="{{ sticky_header ? 'header-main header-sticky' : 'header-main' }}">
  <div class="container">
    <div class="header-container">
      {% if page.header %}
        <div class="site-brand">
          {{ page.header }}
        </div> <!--/.site-branding -->
      {% endif %}
      {% if page.primary_menu or page.search_box %}
      <div class="header-right">
        {% if page.primary_menu %}
          <div class="mobile-menu"><span></span></div> {# mobile-menu #}
          <div class="primary-menu-wrapper">
            <div class="menu-wrap">
              <div class="close-mobile-menu">x</div>
              {{ page.primary_menu }}
            </div> <!-- /.menu-wrap -->
          </div> <!-- /.primary-menu-wrapper -->
        {% endif %} <!--  end if for -->
        {% if page.search_box %}
          {% include '@thexpro/template-parts/header/search.html.twig' %}
        {% endif %}
        {% if sliding_sidebar %}
          <div class="sliding-sidebar-menu">
            <div class="sliding-sidebar-icon"><span></span></div>
          </div>
        {% endif %} <!--  end sidebar_sliding -->
      </div> <!-- /.header-right -->
    {% endif %}
    </div><!-- /header-container -->
  </div><!-- /container -->
</div><!-- /header main -->
{% if sticky_header %}
<div class="sticky-header-height"></div>
{% endif %}
{% if is_front and slider_show %}
  {% include '@xarapro/template-parts/slider.html.twig' %}
{% elseif not is_front and page.page_header %}
  {% include '@thexpro/template-parts/header/header-page.html.twig' %}
{% endif %}
</header>